<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/lessonText" >

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/back_button" />

        <TextView
            android:id="@+id/alphabetTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="3dp"
            android:text="@string/alphabetTitle"
            android:textColor="@color/white"
            android:textSize="40sp" />
    </LinearLayout>

    <ViewFlipper
        android:id="@+id/abcFlipperOne"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <include layout="@layout/activity_alphabet_a"/>
        <include layout="@layout/activity_alphabet_b"/>
        <include layout="@layout/activity_alphabet_c"/>
        <include layout="@layout/activity_alphabet_d"/>
        <include layout="@layout/activity_alphabet_e"/>
        <include layout="@layout/activity_alphabet_f"/>
        <include layout="@layout/activity_alphabet_g"/>
        <include layout="@layout/activity_alphabet_h"/>
        <include layout="@layout/activity_alphabet_i"/>
        <include layout="@layout/activity_alphabet_j"/>
        <include layout="@layout/activity_alphabet_k"/>
        <include layout="@layout/activity_alphabet_l"/>
        <include layout="@layout/activity_alphabet_m"/>
        <include layout="@layout/activity_abc_quiz"/>
        
    </ViewFlipper>

    <include layout="@layout/navigation" />

</LinearLayout>